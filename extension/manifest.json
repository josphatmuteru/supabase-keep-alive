{
  "manifest_version": 3,
  "name": "Supabase Keep Alive",
  "version": "1.1",
  "description": "Keep your Supabase free-tier projects active by automatically pinging them. Prevents pausing after 7 days of inactivity.",
  "permissions": ["storage", "alarms"],
  "host_permissions": ["https://*.supabase.co/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Supabase Keep Alive - Keep your projects active",
    "default_icon": {
      "16": "icons/supabase-icon-16.png",
      "32": "icons/supabase-icon-32.png",
      "48": "icons/supabase-icon-48.png",
      "128": "icons/supabase-icon-128.png"
    }
  },
  "icons": {
    "16": "icons/supabase-icon-16.png",
    "32": "icons/supabase-icon-32.png", 
    "48": "icons/supabase-icon-48.png",
    "128": "icons/supabase-icon-128.png"
  }
}